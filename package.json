{
  "dependencies": {
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint  client/**/*.tsx server/**/*.ts",
    "format": "prettier --write client/**/*.tsx server/**/*.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5"
  }
}