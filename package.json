{
  "dependencies": {
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint  client/**/*.tsx server/**/*.ts",
    "format": "prettier --write client/**/*.tsx server/**/*.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3"
  }
}